{
    "eslint.workingDirectories": [
        "./backend/chat-service",
        "./backend/ocr-service",
        "./frontend"
    ],
    "cSpell.ignoreWords": [
        "openAIAPIKey",
        "ChatGPTAPI",
        "openai",
        "openAIAPIOrg",
        "Supabase"
    ],
    "prettier.enable": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/node_modules": false
    },
    "restoreTerminals.terminals": [
        {
            "splitTerminals": [
                {
                    "name": "chat-service-server",
                    "commands": [
                        "docker logs -f chat-service"
                    ]
                }
            ]
        },
        {
            "splitTerminals": [
                {
                    "name": "client",
                    "commands": [
                        "docker logs -f chatgpt"
                    ]
                }
            ]
        },
        {
            "splitTerminals": [
                {
                    "name": "ocr-service-server",
                    "commands": [
                        "docker logs -f ocr-service"
                    ]
                }
            ]
        }
    ]
}